					<li Class="HediffGiver_Random">
						<hediff>Feldoh_TeleportingSicknessEpisode</hediff>
						<mtbDays>0.1</mtbDays>
					</li>
				</hediffGivers>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
